
@{ Layout = "_CMS"; }
<h1>All Events</h1>

<p><a asp-controller="CMS" asp-action="AddEvent" class="add">Add Event</a></p>

<table class="table">
    <tr>
        <td>Event</td>
        <td>Edit</td>
        <td>Delete</td>
    </tr>
    @foreach (var item in Model)

    {
<tr>
    <td><a asp-controller="Home" asp-action="Event" asp-route-id="@item.EventID">@item.EventTitle</a></td>
    <td><p><a asp-controller="CMS" asp-action="UpdateEvent" asp-route-id="@item.EventID" class="edit">Update</a></p></td>
    <td><p><a asp-controller="CMS" asp-action="DeleteEvent" asp-route-id="@item.EventID" class="delete">Delete</a></p></td>
</tr>}

</table>
    