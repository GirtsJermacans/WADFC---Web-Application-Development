
@model WADFC.Models.EventFighters

@{
    Layout = "_CMS";
}

<h1>Add Fight</h1>

<form id="formAddFight" asp-controller="CMS" asp-action="AddFight" asp-route-id="@Model.EventID">


    <div>
        <label asp-for="@Model.NewFightForm.FighterAID">Pick Fighter A</label>
        <select asp-for="@Model.NewFightForm.FighterAID">
            @foreach (var item in Model.FightersList)
            {
                <option value="@item.FighterID">@item.FirstName @item.Surname</option>
            }
        </select>
    </div>

    <div>
        <label asp-for="@Model.NewFightForm.FighterBID">Pick Fighter B</label>
        <select asp-for="@Model.NewFightForm.FighterBID">
            @foreach (var item in Model.FightersList)
            {
                <option value="@item.FighterID">@item.FirstName @item.Surname</option>
            }
        </select>
    </div>

    <div>
        <label asp-for="@Model.NewFightForm.Division">Division</label>
        <input type="text" asp-for="@Model.NewFightForm.Division" />
        <span asp-validation-for="@Model.NewFightForm.Division" class="error"></span>
    </div>

    <div>
        <label asp-for="@Model.NewFightForm.Winner">Winner</label>
        <input type="text" asp-for="@Model.NewFightForm.Winner" />
        <span asp-validation-for="@Model.NewFightForm.Winner" class="error"></span>
    </div>

    <div>
        <label asp-for="@Model.NewFightForm.Method">Method</label>
        <input type="text" asp-for="@Model.NewFightForm.Method" />
        <span asp-validation-for="@Model.NewFightForm.Method" class="error"></span>
    </div>

    <div>
        <label asp-for="@Model.NewFightForm.Round">Round</label>
        <input type="number" asp-for="@Model.NewFightForm.Round" />
        <span asp-validation-for="@Model.NewFightForm.Round" class="error"></span>
    </div>

    <div>
        <input type="submit" value="Add" class="add" />
    </div>

</form>

<div id="errorForForm"></div>

@section MyScripts {
    <script src="~/js/cmsAddFightForm.js"></script>
}