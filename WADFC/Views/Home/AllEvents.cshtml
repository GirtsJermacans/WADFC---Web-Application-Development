
@{ ViewData["Title"] = "Events | WADFC"; }

<div class="hideForMobile">
    <form id="formDesktopEvents1" action="SearchEvent">
        <input type="text" name="searchString" id="SearchString" placeholder="event" />
        <button type="submit">
            <i class="fa fa-search"></i>
        </button>
    </form>
</div>
<div id="errorForForm"></div>

@foreach (var item in Model)
{
    <div class="events">
        <a asp-controller="Home" asp-action="Event" asp-route-id="@item.EventID" />
        <img src="~/images/@item.EventImage" alt="@item.EventTitle"/>
        <div class="eventsText">
            <h1>@item.EventTitle</h1>
            <p>@item.Location          Date: @item.Date</p>
        </div>
    </div>

}

@section MyScripts {
    <script src="~/js/main.js"></script>
    <script src="~/js/events.js"></script>
}